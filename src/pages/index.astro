---
import data from "../config/site.json";

import Default from "../layouts/Default.astro";
import Update from "../components/Update.astro";
import { Content as HomeContent } from "../content/home.md";

let title = data.config.mainPages.mainTitle
    ? data.config.mainPages.mainTitle
    : data.details.project.title;
---

<Default title={title}>
    <div>
        {data.authorUpdate.visible ? <Update /> : null}
    </div>
    <div class="mt-5">
        <HomeContent />
    </div>
</Default>
