---
import "../styles/global.css";
import "../config/variables.css";

import Meta from "../components/Meta.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Footer from "../components/Footer.astro";

const { title, date, notes, audio } = Astro.props;
---

<html lang="en">
    <Meta title={title} />
    <body class="bg-background px-[25rem] py-[1rem]">
        {
            audio ? (
                <div class="ml-[25%] mr-[25%] mt-10 mb-5">
                    <audio class="w-[100%]" controls loop>
                        <source src={audio} />
                    </audio>
                </div>
            ) : null
        }
        <div class="text-center mb-20">
            <h1>{title}</h1>
            <h3 class="text-subtext">
                Published on <FormattedDate date={date} />
            </h3>
        </div>
        <div>
            <div class="my-10">
                {
                    notes ? (
                        <hr />
                        <div class="my-5">
                            <h3>{notes}</h3>
                        </div>
                        <hr />
                    ) : null
                }
            </div>
            <slot />
        </div>
        <Footer />
    </body>
</html>
